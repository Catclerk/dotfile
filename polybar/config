label-urgent = %index%
label-urgent-foreground = #000000
label-urgent-background = ${colors.background-urgent}
label-urgent-padding = 2

[module/title]
type = internal/xwindow
label-maxlen = 80

[module/spotify]
type = custom/script
exec = spotifycli --statusshort
format = <label>
format-padding = 0
click-left = spotifycli --playpause
scroll-up = spotifycli --prev
scroll-down = spotifycli --next

[module/date]
type = internal/date
interval = 1
label =  %date%
date     = %H:%M
date-alt = %A, %d %B %Y

[module/ethernet]
type = internal/network
interface = ${env:ethernetcard}
format-connected-prefix    = " "
label-connected         = %local_ip%

[module/wlan]
type = internal/network
interface = wlan0
format-connected    = %{A1:dmenu-wifi:}<label-connected>%{A}
format-disconnected = %{A1:dmenu-wifi:}<label-disconnected>%{A}
format-connected-prefix    = "直 "
format-disconnected-prefix = "睊 "
format-disconnected-prefix-foreground = ${colors.red}
;label-connected         = %essid% ( %upspeed%  %downspeed%)
label-connected         = %essid%
label-disconnected      = Disconnected
label-disconnected-foreground = ${colors.red}

[module/cpu]
type = internal/cpu
format-prefix = " "

